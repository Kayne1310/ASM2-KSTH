
@{
    ViewData["Title"] = "Diemdanh";
    Layout = "~/Views/Shared/LayoutKSTH.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Attendance</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Tiger Nixon</td>
                        <td>System Architect</td>
                        <td>Edinburgh</td>
                        <td>61</td>
                        <td>
                            <select name="attendance-1">
                                <option value="present">Present</option>
                                <option value="absent">Absent</option>
                                <option value="late">Late</option>
                            </select>
                        </td>
                        <td>$320,800</td>

                    </tr>

                    </tfoot>
            </table>

            <button type="button" class="btn btn-success px-4 raised d-flex gap-2" onclick="showSuccessMessage()">
                <i class="material-icons-outlined">check_circle</i>Save
            </button>
                <style>
                button.btn-success {
                    margin-left: calc(95% - 95px);
                }

                td select option[value="present"] {
                    color: green;
                }

                td select option[value="absent"] {
                    color: red;
                }

                td select option[value="late"] {
                    color: orange;
                }
                </style>
            <script>

                document.getElementById("saveButton").addEventListener("click", function () {
                    alert("Lưu thành công!");
                });
            </script>

        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            var table = $('#example2').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print']
            });

            table.buttons().container()
                .appendTo('#example2_wrapper .col-md-6:eq(0)');
        });
    </script>
}



