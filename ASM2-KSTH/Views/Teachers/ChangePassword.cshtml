@{
	ViewBag.Title = "Change Password";
	Layout = "~/Views/Shared/LayoutTeacher.cshtml";
}


<div class="d-flex justify-content-center">
	<div class="col-12 col-xl-6">
		<div class="card">
			<div class="card-body p-4">
				<h5 class="mb-4">Change Password</h5>
				<form class="row g-3" asp-action="ChangePassword" method="post">
					<div class="col-md-12" asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="col-md-12">
						<label for="oldPassword" class="form-label">Enter Old Password</label>
						<div class="position-relative input-icon">
							<input type="password" name="oldPassword" class="form-control" id="oldPassword">
							<span class="position-absolute top-50 translate-middle-y"><i class="material-icons-outlined fs-5">lock_open</i></span>
						</div>
					</div>

					<div class="col-md-12">
						<label for="newPassword" class="form-label">Enter new Password</label>
						<div class="position-relative input-icon">
							<input type="password" name="newPassword" id="newPassword" class="form-control">
							<span class="position-absolute top-50 translate-middle-y"><i class="material-icons-outlined fs-5">lock_open</i></span>
						</div>
					</div>

					<div class="col-md-12">
						<label for="input17" class="form-label">Enter Confirm New Password</label>
						<div class="position-relative input-icon">
							<input type="password" name="confirmNewPassword" id="confirmNewPassword" class="form-control">
							<span class="position-absolute top-50 translate-middle-y"><i class="material-icons-outlined fs-5">lock_open</i></span>
						</div>
					</div>

					<div class="col-md-12">
						<div class="d-md-flex d-grid align-items-center gap-3">
							<button type="submit" class="btn btn-primary px-4">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


