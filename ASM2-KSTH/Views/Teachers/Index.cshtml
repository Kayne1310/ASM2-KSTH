@model ASM2_KSTH.Models.Teacher


@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" />
</head>

<body>
    <div class="d-lg-flex half">
        <div class="bg order-1" style="background-image: url('/images/tuong.jpg');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>KSTHschool</strong></h3>
                        <p class="mb-4">Welcome back! Select login method:</p>
                        <div class="social d-flex text-center">
                            <a asp-controller="Students" asp-action="Index" class="abc" style="color: black; background-color: white">Student</a>
                            <a asp-controller="Teachers" asp-action="Index" class="xyz" >Teacher</a>
                            <a asp-controller="Admins" asp-action="Index" class="abc" style="color: black; background-color: white">Admin</a>
                        </div>

                        <form asp-action="Index" asp-route-returnurl="@ViewBag.ReturnUrl">
                            <div class="form-group first">
                                <label asp-for="@Model.Username" class="form-label my-3"></label>
                                <sup>*</sup>
                                <input asp-for="@Model.Username" class="form-control" placeholder="Enter username" >
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="@Model.Password" class="form-label my-3"></label>
                                <sup>*</sup>
                                <input asp-for="@Model.Password" class="form-control" placeholder="Enter password" >
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex mb-3 align-items-center">
                                <span class="text-danger">@ViewBag.ErrorMessage</span>
                            </div>
                            <button type="submit" class="btn btn-block btn-primary"> Log In </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>

    @if (TempData["ok"] != null)
    {
        <script>
            $(document).ready(function () {
                $.toast({
                    heading: 'Notification',
                    text: "@TempData["ok"]",
                    showHideTransition: 'slide',
                    icon: 'success',
                    position: 'top-center',
                    hideAfter: 3000
                });
            });
        </script>
    }
    else if (TempData["no"] != null)
    {
        <script>
            $(document).ready(function () {
                $.toast({
                    heading: 'Notification',
                    text: "@TempData["no"]",
                    showHideTransition: 'slide',
                    icon: 'error',
                    position: 'top-center',
                    hideAfter: 10000
                });
            });
        </script>
    }
</body>
</html>

