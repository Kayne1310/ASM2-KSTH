@model IEnumerable<ASM2_KSTH.ViewModels.StudentInClassViewModel>

@{
    ViewData["Title"] = "List of Students in Class";
    Layout = "~/Views/Shared/LayoutStudent.cshtml";
}




<p class="fw-bold fs-5" style="margin-bottom:15px">List of Students in  Class  @ViewBag.ClassName </p>



<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Student Name</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var studentClass in Model)
                    {
                        <tr>
                            <td>@studentClass.StudentId</td>
                            <td>@studentClass.StudentName</td>

                        </tr>
                    }
                </tbody>

            </table>
            
            <p>
                <a asp-controller="Students" asp-action="DashBoard"><button type="button" class="btn btn-warning px-5">Back</button> </a>

            </p>

        </div>
    </div>


    @section scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example2').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'print']
                });

                table.buttons().container()
                    .appendTo('#example2_wrapper .col-md-6:eq(0)');
            });
        </script>
    }
