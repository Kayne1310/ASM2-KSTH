@model IEnumerable<ASM2_KSTH.ViewModels.AttendanceStatusViewModel>

@{
    ViewData["Title"] = "Check Attendance";
    Layout = "~/Views/Shared/LayoutStudent.cshtml";
}

<p class="fw-bold fs-5" style="margin-bottom:15px">Attendance Statuss  </p>


<div class="card">
    <div class="card-body">
        <div class="table-responsive">

            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Class Name</th>
                        <th>Course Name</th>
                        <th>Attendance Status</th>
                        <th>Reason</th>
                        <th>Session</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClassName</td>
                            <td>@item.CourseName</td>
                            <td>@item.AttendanceStatus</td>
                            <td>@item.Reason</td>
                            <td>@item.Numses</td>

                        </tr>
                    }
                </tbody>

            </table>

            <p>
                <a asp-controller="Students" asp-action="DashBoard"><button type="button" class="btn btn-warning px-5">Back</button> </a>

            </p>

        </div>
    </div>


    @section scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example2').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'print']
                });

                table.buttons().container()
                    .appendTo('#example2_wrapper .col-md-6:eq(0)');
            });
        </script>
    }
