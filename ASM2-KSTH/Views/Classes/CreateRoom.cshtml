@model ASM2_KSTH.Models.Room

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<p class="fw-bold fs-5" style="margin-bottom:15px">List Information Classes</p>
<form asp-action="CreateRoom" method="post">
    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label" style="margin-bottom:15px"></label>
        <input asp-for="RoomNumber" class="form-control" style="margin-bottom:15px" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" style="margin-right:15px"/>
        <a asp-action="ListRoom"><input type="Back" value="Back" class="btn btn-primary" style="width:72px;height:40px" /></a>
    </div>

</form>


    


