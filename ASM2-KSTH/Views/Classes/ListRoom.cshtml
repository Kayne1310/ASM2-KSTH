@model IEnumerable<ASM2_KSTH.Models.Room>

@{
    ViewData["Title"] = "ListRoom";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<p class="fw-bold fs-5" style="margin-bottom:15px">List Room</p>
<hr />
<div class="card-body">
    <div class="row row-cols-auto g-3">
        <div class="col">
            <a asp-action="CreateRoom"> <button type="button"  class="btn ripple btn-danger px-5" style="margin-bottom: 15px">Add Room</button></a>
            
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoomId</td>
                            <td>@item.RoomNumber</td>

                            <td>
                                <a asp-controller="Classes" asp-action="Edit" asp-route-classId="@item.RoomId" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
                                    <i class="material-icons-outlined">cloud_upload</i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a asp-controller="Classes" asp-action="index" class="btn btn-warning px-5">Back </a>
            </p>
        </div>
    </div>
</div>



@section scripts {
    <script>
        $(document).ready(function () {
            var table = $('#example2').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print']
            });

            table.buttons().container()
                .appendTo('#example2_wrapper .col-md-6:eq(0)');
        });
    </script>
}
