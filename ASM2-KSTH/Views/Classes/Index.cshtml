@model IEnumerable<ASM2_KSTH.ViewModels.ClassViewModel>

<p class="fw-bold fs-5" style="margin-bottom:15px">List Information Classes</p>

<div class="card-body">
    <div class="row row-cols-auto g-3">
        <div class="col">
            <button type="button" class="btn ripple btn-primary px-5" style="margin-bottom:15px">Create Class</button>
        </div>
        <div class="col">
            <button type="button" class="btn ripple btn-danger px-5">Add Student</button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Class Name</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>Room</th>
                        <th>Teacher</th>
                        <th>Student Count</th>
                        <th>Course Name</th>
                        <th>Action</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClassName</td>
                            <td>@item.Semester</td>
                            <td>@item.Year</td>
                            <td>@item.Room</td>
                            <td>@item.Teacher</td>
                            <td>@item.StudentCount</td>
                            <td>@item.CourseName</td>
                           
                            <td>

                                <a asp-controller="Classes" asp-action="Edit" asp-route-classId="@item.ClassId" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
                                    <i class="material-icons-outlined">cloud_upload</i> Edit
                                </a>
                                <a asp-controller="Classes" asp-action="Delete" asp-route-classId="@item.ClassId" class="btn btn-outline-dark px-4 d-flex gap-2" style="display:inline !important">
                                    <i class="material-icons-outlined">delete</i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a asp-controller="grades" asp-action="index">Back </a>
            </p>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var table = $('#example2').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'print']
            });

            table.buttons().container()
                .appendTo('#example2_wrapper .col-md-6:eq(0)');
        });
    </script>
}
