@model IEnumerable<ASM2_KSTH.Models.Teacher>


@{
	ViewData["Title"] = "ListST";
	Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h6 class="mb-0 text-uppercase">Teacher Management</h6>
<hr>

<div class="card">
	<div class="card-body">
		<div class="table-responsive">
			<table id="example2" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Teacher Name</th>
						<th>Address</th>
						<th>Email</th>
						<th>Phone number</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var teacher in Model)
					{

						<tr>
							<td>@teacher.TeacherId</td>
							<td>@teacher.Name</td>
							<td>@teacher.Address</td>
							<td>@teacher.Email</td>
							<td>@teacher.PhoneNumber</td>
							<td>
								<a asp-action="EditListTE" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">
									<button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
										<i class="material-icons-outlined">cloud_upload</i> Edit
									</button>
								</a>
								<a asp-action="DeleteListTE" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">
									<button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2" style="display:inline !important">
										<i class="material-icons-outlined">delete</i> Delete
									</button>
								</a>

							</td>
						</tr>
					}
				</tbody>
			</table>
			@section scripts {
				<script>
					$(document).ready(function () {
						var table = $('#example2').DataTable({
							lengthChange: false,
							buttons: ['copy', 'excel', 'pdf', 'print']
						});

						table.buttons().container()
							.appendTo('#example2_wrapper .col-md-6:eq(0)');
					});
				</script>
			}
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success">
					@TempData["SuccessMessage"]
				</div>
			}

			@if (TempData["ErrorMessage"] != null)
			{
				<div class="alert alert-danger">
					@TempData["ErrorMessage"]
				</div>
			}
		</div>
	</div>
</div>

