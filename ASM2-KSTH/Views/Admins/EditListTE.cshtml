@model ASM2_KSTH.Models.Teacher

@{
    ViewData["Title"] = "EditListTE";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<p class="fw-bold fs-5" style="margin-bottom:15px">Edit Teacher</p>

<div class="col-md-4">
<form asp-action="EditListTE" method="post">
    <input type="hidden" asp-for="TeacherId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label" style="margin-bottom:15px">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label" style="margin-bottom:15px">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label" style="margin-bottom:15px">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label" style="margin-bottom:15px">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="RoleId" class="form-control" value="2" type="hidden">
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" style="margin-top:15px" />
    </div>
</form>
</div>