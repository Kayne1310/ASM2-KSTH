@model ASM2_KSTH.ViewModels.GradesViewModels

@{
    ViewData["Title"] = "Add Grade";
    Layout = "~/Views/Shared/LayoutTeacher.cshtml";

}
<h2>Add Grade</h2>
<div class="col-md-6">
    <form asp-action="Add" method="post">
        <input type="hidden" name="CourseId" value="@Model.SelectedCourseId" />
        <input type="hidden" name="EnrollmentId" value="@Model.SelectedEnrollmentId" />
        <input type="hidden" name="ClassId" value="@ViewData["ClassId"]" />
        <input type="hidden" name="SelectedStudentId" value="@Model.SelectedStudentId" />

        <div class="form-group">
            <label for="studentName" style="margin-bottom:15px">Student:</label>
            <input style="margin-bottom:15px" type="text" class="form-control" id="studentName" name="StudentName" value="@Model.StudentName" readonly />
        </div>

        <div class="form-group">
            <label for="grade1" style="margin-bottom:15px">Grade:</label>
            <input type="text" class="form-control" id="grade1" name="Grade1" value="@Model.Grade1" style="margin-bottom:15px" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>