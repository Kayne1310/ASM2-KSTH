@model ASM2_KSTH.ViewModels.StudentGradesViewModel

@{
    ViewData["Title"] = "Student Grades";
    Layout = "~/Views/Shared/LayoutStudent.cshtml";
}


<p class="fw-bold fs-5" style="margin-bottom:15px">@Model.StudentName's Grades  </p>


<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Grade</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.Grades)
                    {
                        <tr>
                            <td>@grade.CourseName</td>

                            <td>
                                @if (grade.Grade1 == null)
                                {
                                    <text>You Dont Grade</text>
                                }
                                else
                                {
                                    @grade.Grade1
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <p>
                <a asp-controller="Students" asp-action="DashBoard"><button type="button" class="btn btn-warning px-5">Back</button> </a>

            </p>

        </div>
    </div>

    @section scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example2').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'print']
                });

                table.buttons().container()
                    .appendTo('#example2_wrapper .col-md-6:eq(0)');
            });
        </script>
    }
