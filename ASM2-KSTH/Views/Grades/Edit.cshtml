@model ASM2_KSTH.ViewModels.GradesViewModels

@{
    ViewData["Title"] = "Edit Grade";
    Layout = "~/Views/Shared/LayoutTeacher.cshtml";

}

<p class="fw-bold fs-5" style="margin-bottom:15px">Edit Grades</p>

<div class="col-md-6">
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GradeId" />
    <input type="hidden" name="classId" value="@ViewData["ClassId"]" />
    <div class="form-group">
        <label asp-for="Grade1" class="control-label" style="margin-bottom:15px">Grade</label>
        <input asp-for="Grade1" class="form-control" required />
        <span asp-validation-for="Grade1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" style="margin-top:15px" />
    </div>
</form>
</div>

