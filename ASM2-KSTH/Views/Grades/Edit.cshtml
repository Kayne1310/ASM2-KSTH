@model ASM2_KSTH.ViewModels.GradesViewModels

@{
    ViewData["Title"] = "Edit Grade";
}

<h1>Edit Grade</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GradeId" />
    <input type="hidden" name="classId" value="@ViewData["ClassId"]" />
    <div class="form-group">
        <label asp-for="Grade1" class="control-label"></label>
        <input asp-for="Grade1" class="form-control" />
        <span asp-validation-for="Grade1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


