@model IEnumerable<ASM2_KSTH.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "ListStudents";
    Layout = "~/Views/Shared/LayoutKSTH.cshtml";
}

<h1>ListStudents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Class Name</th>
                        <th>Major Name</th>
                        <th>Grade </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                       
                        <tr>
                            <td>@student.StudentId</td>
                            <td>@student.Name</td>
                            <td>@student.ClassName</td>
                            <td>@student.MajorName</td>
                            <td>@student.Grade1</td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@student.StudentId" asp-route-classId="@ViewData["ClassId"]">Edit</a>
                                <a asp-action="Delete" asp-route-id="@student.StudentId" asp-route-classId="@ViewData["ClassId"]">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
               
            </table>
            <p>
                <a asp-controller="grades" asp-action="index">Back </a>
            </p>

        </div>
    </div>

    @section scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example2').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'print']
                });

                table.buttons().container()
                    .appendTo('#example2_wrapper .col-md-6:eq(0)');
            });
        </script>
    }
