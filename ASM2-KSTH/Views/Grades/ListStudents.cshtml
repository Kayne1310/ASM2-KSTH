@model IEnumerable<ASM2_KSTH.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "ListStudents";
    Layout = "~/Views/Shared/LayoutKSTH.cshtml";
}

@foreach(var student in Model)
{
    

    <p class="fw-bold fs-5" style="margin-bottom:15px">List Grade of Students of @student.ClassName</p>
}




<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Class Name</th>
                        <th>Major Name</th>
                        <th>Grade </th>
                        <th>Action</th>
                       >
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                       
                        <tr>
                            <td>@student.StudentId</td>
                            <td>@student.Name</td>
                            <td>@student.ClassName</td>
                            <td>@student.MajorName</td>
                            <td>@student.Grade1</td>
                           

                            <td>
                                <a asp-action="Edit" asp-route-id="@student.StudentId" asp-route-classId="@ViewData["ClassId"]">
                                    <button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
                                        <i class="material-icons-outlined">cloud_upload</i> Edit
                                    </button>
                                </a>


                                <a asp-action="Delete" asp-route-id="@student.StudentId" asp-route-classId="@ViewData["ClassId"]">     <button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2" style="display:inline !important"><i class="material-icons-outlined">delete</i> Delete</button></a>
                                   

                                
                            </td>
                        </tr>
                    }
                </tbody>
               
            </table>
            <p>
                <a asp-controller="grades" asp-action="index"><button type="button" class="btn btn-warning px-5">Back</button> </a>
                
            </p>

        </div>
    </div>

    @section scripts {
        <script>
            $(document).ready(function () {
                var table = $('#example2').DataTable({
                    lengthChange: false,
                    buttons: ['copy', 'excel', 'pdf', 'print']
                });

                table.buttons().container()
                    .appendTo('#example2_wrapper .col-md-6:eq(0)');
            });
        </script>
    }
