@{
    ViewData["Title"] = "Add Course to Class";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    var selectedCourse = ViewData["SelectedCourse"] as ASM2_KSTH.Models.Course;
    var classes = ViewData["Classes"] as SelectList;
}

<h2>Add Course to Class</h2>

<form asp-action="Add" method="post">
    <input type="hidden" name="courseId" value="@selectedCourse.CourseId" />

    <div class="form-group">
        <label for="courseName">Course:</label>
        <input type="text" class="form-control" id="courseName" value="@selectedCourse.CourseName" readonly />
    </div>
    <div class="form-group">
        <label for="classId">Class:</label>
        <select class="form-control" id="classId" name="classId">
            @foreach (var item in classes)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
